<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tixs.tixsdriver.AdicionarEscolaActivity">

    <EditText
        android:id="@+id/nomeEscola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nome da Escola"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/bntEscola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adicionar escola"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/nomeEscola"
        android:layout_marginTop="9dp"
        android:onClick="bntEscolaClick"
        app:layout_constraintTop_toBottomOf="@+id/nomeEscola" />

    <EditText
        android:id="@+id/nomePonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Bairro"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntEscola" />

    <Button
        android:id="@+id/bntPonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:text="adicionar bairro"
        android:onClick="bntBairroClick"
        app:layout_constraintLeft_toLeftOf="@+id/nomePonto"
        app:layout_constraintTop_toBottomOf="@+id/nomePonto" />

    <Button
        android:id="@+id/bntEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:onClick="bntEnviarClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="388dp"
        android:layout_marginLeft="135dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>