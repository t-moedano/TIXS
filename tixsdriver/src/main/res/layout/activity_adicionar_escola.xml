<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tixs.tixsdriver.AdicionarEscolaActivity">

    <EditText
        android:id="@+id/add_escola_nome_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome da Escola"
        android:inputType="textPersonName" />
    <EditText
            android:id="@+id/addEscolaRuaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Rua"
            android:inputType="textPersonName" />
    <EditText
        android:id="@+id/addEscolaNumeroEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Numero"
        android:inputType="textPersonName" />
    <EditText
            android:id="@+id/addEscolaBairroEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Bairro"
            android:inputType="textPersonName" />
     <EditText
            android:id="@+id/addEscolaCEPEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CEP"
            android:inputType="textPersonName" />


    <Button
        android:id="@+id/adicionarBairroButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#33CC33"
        android:onClick="bntAdicionarEscolaClick"
        android:text="Adicionar escola" />


