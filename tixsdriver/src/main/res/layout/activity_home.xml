<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/drawerLayout"
    tools:context="com.tixs.tixsdriver.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/iniciarIdaButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#33CC33"
            android:onClick="onCheckinButtonClick"
            android:text="Iniciar Ida" />

        <Button
            android:id="@+id/btnIniciarVoltar"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:onClick="onCheckinVolta"
            android:text="Iniciar Volta" />

        <Button
            android:id="@+id/adiministrarVanButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#33CC33"
            android:onClick="onAdministrarVans"
            android:text="Administrar Vans" />

        <Button
            android:id="@+id/addBanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localizar Van"
            android:onClick="onAdicionarVan"
            style="@android:style/Widget.Holo.Button"
            android:backgroundTint="#33CC33" />

        <Button
            android:id="@+id/locateVan"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#33CC33"
            android:onClick="onLocateVanButtonClick"
            android:text="Localizar Van" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:menu="@menu/nagivation_menu"
        android:layout_gravity="start"
        android:id="@+id/nav_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

