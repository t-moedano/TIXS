<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    tools:context="com.tixs.tixsparents.BuscaVanActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione sua crianca:" />

    <Spinner
        android:id="@+id/criancaSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busca de van:" />

    <EditText
        android:id="@+id/buscaNomeTxtEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/bairroTxtEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro"
        android:inputType="textPersonName"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buscarVanButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#33CC33"
            android:onClick="btnBuscar"
            android:text="Buscar"
            android:gravity="center"/>

        <Button
            android:id="@+id/confirmarButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:backgroundTint="#33CC33"
            style="@android:style/Widget.Holo.Button"
            android:onClick="onConfirmarButtonClick"
            android:gravity="center"/>

    </LinearLayout>
    <ListView
        android:id="@+id/condutorList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
