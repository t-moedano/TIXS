<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tixs.tixsparents.CadastraCrianca"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/nomeTxtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sobrenomeTxtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Sobrenome"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeTxtEdit" />

    <EditText
        android:id="@+id/entradaTxtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="164dp" />

    <EditText
        android:id="@+id/saidaTxtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/entradaTxtEdit"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/entradaTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HorÃ¡rio de Entrada"
        android:layout_marginBottom="127dp"
        app:layout_constraintBottom_toTopOf="@+id/entradaTxtEdit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/entradaTxtEdit"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sobrenomeTxtEdit"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/saidaTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="Horario de Saida"
        app:layout_constraintBottom_toTopOf="@+id/saidaTxtEdit"
        app:layout_constraintLeft_toLeftOf="@+id/saidaTxtEdit" />

    <Button
        android:id="@+id/bntEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="295dp"
        android:onClick="bntEnviarClick"
        android:text="Enviar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bntAdicionarEscola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:layout_marginRight="46dp"
        android:onClick="bntAdicionarEscolaClick"
        android:text="Adicionar Escola"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
