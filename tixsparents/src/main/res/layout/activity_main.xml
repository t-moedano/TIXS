<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tixs.tixsparents.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="btnLoginClick"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/senhaTxtEdit"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/senhaTxtEdit" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="69dp"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/emailTxtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/emailTxtView"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />

    <EditText
        android:id="@+id/senhaTxtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/senhaTxtView"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />

    <TextView
        android:id="@+id/emailTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginLeft="91dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailTxtEdit" />

    <TextView
        android:id="@+id/senhaTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/emailTxtEdit"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />

    <TextView
        android:id="@+id/cadastroTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar-se"
        app:layout_constraintLeft_toRightOf="@+id/btnLogin"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="54dp"
        android:onClick="cadastroTxtViewClick"
        app:layout_constraintTop_toBottomOf="@+id/senhaTxtEdit" />

</android.support.constraint.ConstraintLayout>
